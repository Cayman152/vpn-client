<Styles xmlns="https://github.com/avaloniaui" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Design.PreviewWith>
        <Border Padding="20" />
    </Design.PreviewWith>

    <Style Selector="Window">
        <Setter Property="Background" Value="{DynamicResource GhostMainBackgroundBrush}" />
        <Setter Property="Foreground" Value="{DynamicResource GhostTextPrimaryBrush}" />
        <Setter Property="FontFamily" Value="avares://GhostVPN/Assets/Fonts/NotoSansSC-Regular.ttf#Noto Sans SC, Segoe UI, Arial" />
    </Style>

    <Style Selector="UserControl">
        <Setter Property="Foreground" Value="{DynamicResource GhostTextPrimaryBrush}" />
    </Style>

    <Style Selector="Border.GhostCard">
        <Setter Property="Background" Value="{DynamicResource GhostCardBrush}" />
        <Setter Property="BorderBrush" Value="{DynamicResource GhostBorderBrush}" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="CornerRadius" Value="16" />
    </Style>

    <Style Selector="Border.GhostHeroCard">
        <Setter Property="Background" Value="{DynamicResource GhostHeroBrush}" />
        <Setter Property="BorderBrush" Value="{DynamicResource GhostBorderBrush}" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="CornerRadius" Value="20" />
    </Style>

    <Style Selector="Border.GhostShellCard">
        <Setter Property="Background" Value="{DynamicResource GhostCardStrongBrush}" />
        <Setter Property="BorderBrush" Value="{DynamicResource GhostBorderBrush}" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="CornerRadius" Value="16" />
    </Style>

    <Style Selector="Border.GhostMetricCard">
        <Setter Property="Background" Value="#0E182D" />
        <Setter Property="BorderBrush" Value="#223558" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="CornerRadius" Value="14" />
    </Style>

    <Style Selector="Border.GhostBadge">
        <Setter Property="Background" Value="#1B2C4A" />
        <Setter Property="BorderBrush" Value="#2A4878" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="CornerRadius" Value="999" />
    </Style>

    <Style Selector="Button">
        <Setter Property="Foreground" Value="{DynamicResource GhostTextPrimaryBrush}" />
        <Setter Property="Background" Value="{DynamicResource GhostCardStrongBrush}" />
        <Setter Property="BorderBrush" Value="{DynamicResource GhostBorderBrush}" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="CornerRadius" Value="12" />
        <Setter Property="Padding" Value="14,10" />
    </Style>

    <Style Selector="Button:pointerover">
        <Setter Property="Background" Value="#1A2C4A" />
        <Setter Property="BorderBrush" Value="{DynamicResource GhostAccentSoftBrush}" />
    </Style>

    <Style Selector="Button:pressed">
        <Setter Property="Background" Value="#16263F" />
    </Style>

    <Style Selector="Button.IconButton">
        <Setter Property="Width" Value="{StaticResource IconButtonWidth}" />
        <Setter Property="Height" Value="{StaticResource IconButtonHeight}" />
        <Setter Property="MinWidth" Value="{StaticResource IconButtonWidth}" />
        <Setter Property="Padding" Value="0" />
        <Setter Property="CornerRadius" Value="10" />
    </Style>

    <Style Selector="Button.PrimaryAction">
        <Setter Property="Background" Value="#12345B" />
        <Setter Property="BorderBrush" Value="{DynamicResource GhostAccentSoftBrush}" />
        <Setter Property="FontSize" Value="14" />
        <Setter Property="FontWeight" Value="SemiBold" />
        <Setter Property="MinHeight" Value="48" />
    </Style>

    <Style Selector="Button.PrimaryAction:pointerover">
        <Setter Property="Background" Value="#184272" />
        <Setter Property="BorderBrush" Value="{DynamicResource GhostAccentBrush}" />
    </Style>

    <Style Selector="Button.SecondaryAction">
        <Setter Property="Background" Value="#0F223D" />
        <Setter Property="BorderBrush" Value="#2D4E7F" />
        <Setter Property="FontWeight" Value="SemiBold" />
        <Setter Property="MinHeight" Value="46" />
    </Style>

    <Style Selector="Button.ConnectToggle">
        <Setter Property="Width" Value="196" />
        <Setter Property="Height" Value="196" />
        <Setter Property="Padding" Value="24" />
        <Setter Property="CornerRadius" Value="98" />
        <Setter Property="Background" Value="{DynamicResource GhostConnectButtonBrush}" />
        <Setter Property="BorderBrush" Value="#8DDCFF" />
        <Setter Property="BorderThickness" Value="2" />
        <Setter Property="Foreground" Value="#04101F" />
        <Setter Property="FontSize" Value="18" />
        <Setter Property="FontWeight" Value="Bold" />
        <Setter Property="HorizontalContentAlignment" Value="Center" />
        <Setter Property="VerticalContentAlignment" Value="Center" />
    </Style>

    <Style Selector="Button.ConnectToggle:pointerover">
        <Setter Property="Background" Value="#56CCFF" />
        <Setter Property="BorderBrush" Value="#BEECFF" />
    </Style>

    <Style Selector="TextBlock.GhostTitle">
        <Setter Property="FontSize" Value="26" />
        <Setter Property="FontWeight" Value="Bold" />
        <Setter Property="Foreground" Value="{DynamicResource GhostTextPrimaryBrush}" />
    </Style>

    <Style Selector="TextBlock.GhostSubtitle">
        <Setter Property="FontSize" Value="14" />
        <Setter Property="Foreground" Value="{DynamicResource GhostTextSecondaryBrush}" />
    </Style>

    <Style Selector="TextBlock.GhostMicroLabel">
        <Setter Property="FontSize" Value="12" />
        <Setter Property="FontWeight" Value="SemiBold" />
        <Setter Property="Foreground" Value="{DynamicResource GhostTextSecondaryBrush}" />
    </Style>

    <Style Selector="TextBox">
        <Setter Property="Background" Value="#0E182D" />
        <Setter Property="Foreground" Value="{DynamicResource GhostTextPrimaryBrush}" />
        <Setter Property="BorderBrush" Value="#2C446D" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="CornerRadius" Value="10" />
        <Setter Property="ScrollViewer.AllowAutoHide" Value="False" />
    </Style>

    <Style Selector="ScrollViewer">
        <Setter Property="AllowAutoHide" Value="False" />
    </Style>

    <Style Selector="TabControl">
        <Setter Property="Theme" Value="{StaticResource LineTabControl}" />
    </Style>

    <Style Selector="TabItem">
        <Setter Property="Padding" Value="16,8" />
        <Setter Property="Foreground" Value="{DynamicResource GhostTextSecondaryBrush}" />
    </Style>

    <Style Selector="TabItem:selected">
        <Setter Property="Foreground" Value="{DynamicResource GhostAccentBrush}" />
        <Setter Property="FontWeight" Value="SemiBold" />
    </Style>

    <Style Selector="DataGrid">
        <Setter Property="RowHeight" Value="26" />
        <Setter Property="Background" Value="#0B1425" />
        <Setter Property="BorderBrush" Value="#233B5F" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="GridLinesVisibility" Value="Horizontal" />
        <Setter Property="ScrollViewer.AllowAutoHide" Value="False" />
    </Style>

    <Style Selector="DataGridRow">
        <Setter Property="Background" Value="#0C172A" />
    </Style>

    <Style Selector="DataGridCell">
        <Setter Property="BorderBrush" Value="#1C2E4A" />
    </Style>

    <Style Selector="GridSplitter">
        <Setter Property="Background" Value="#243E65" />
    </Style>

    <Style Selector="PathIcon">
        <Setter Property="Width" Value="16" />
        <Setter Property="Height" Value="16" />
        <Setter Property="Foreground" Value="{DynamicResource GhostTextPrimaryBrush}" />
    </Style>
</Styles>
